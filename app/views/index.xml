<Alloy>
    <Collection src="beers"/>
    <Window class="container">
        <TableView id="beersTable" dataCollection="beers">
            <TableViewRow 
                id="{alloy_id}" 
                title="{name}"
                name="{name}" 
                brewery="{brewery}" 
                rating="{rating}" 
                establishment="{establishment}" 
                location="{location}" 
                notes="{notes}">
            </TableViewRow>
        </TableView>
    </Window>
</Alloy> 