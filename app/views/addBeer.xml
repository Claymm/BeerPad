<Alloy>
	<Window id="addBeerWin" title="Add a beer" modal="true" class="container">
	    <ScrollView layout="vertical">
	        
	        <Button id="close">Cancel</Button>
	        
	        <Label id="title" class="dense" text="ADD A BEER"></Label>
	        
	        <View id="imageView">
	            <ImageView id="beerImage"></ImageView>
	            <ImageView id="cameraImage" image="camera.png" height="35" width="35"></ImageView>
	            <!-- <Label id="addImageText" text="photograph"></Label> -->
	        </View>
	        
	        
            <TextField id="name" hintText="Title..."></TextField>
            <TextField id="brewery" hintText="Brewery..."></TextField>
            <TextField id="rating" hintText="Rating..."></TextField>
            <TextField id="establishment" hintText="Establishment..."></TextField>
            <TextField id="location" hintText="Location..."></TextField>
            
            <Label id="notesLabel" text="Notes:"></Label>
            <TextArea id="notes" />
            
            <Button id="addBeerButton" class="button">Add this beer</Button>
            
        </ScrollView>
	</Window>
</Alloy>