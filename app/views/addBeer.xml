<Alloy>
	<Window id="addBeerWin" title="Add a beer" modal="true" class="container">
	    <ScrollView layout="vertical">
	        
	        <Button id="close">Cancel</Button>
	        
	        <Label id="title" class="dense" text="ADD A BEER"></Label>
	        
	        <View id="imageView">
	            <ImageView id="beerImage"></ImageView>
	            <ImageView id="cameraImage" image="camera.png" height="35" width="35"></ImageView>
	            <!-- <Label id="addImageText" text="photograph"></Label> -->
	        </View>
	        
	        
            <TextField id="name" hintText="Title..."></TextField>
            <TextField id="brewery" hintText="Brewery..."></TextField>
            
            <View class="ratingButtons">
                <ImageView id="star1" image="ratingStar.png" class="starImage"></ImageView>
                <ImageView id="star2" image="ratingStar.png" class="starImage"></ImageView>
                <ImageView id="star3" image="ratingStar.png" class="starImage"></ImageView>
                <ImageView id="star4" image="ratingStar.png" class="starImage"></ImageView>
                <ImageView id="star5" image="ratingStar.png" class="starImage"></ImageView>
            </View>
            
            <TextField id="percent" hintText="Percent %..." keyboardType="Ti.UI.KEYBOARD_NUMBERS_PUNCTUATION"></TextField>
            <TextField id="establishment" hintText="Pub or Establishment..."></TextField>
            <TextField id="location" hintText="Location..."></TextField>
            
            <Label id="notesLabel" text="Notes:"></Label>
            <TextArea id="notes" />
            
            <Button id="addBeerButton" class="button">Add this beer</Button>
            
        </ScrollView>
        
        <!-- <OptionDialog id="imageDialog" title="Beer picture">
           <Options>
               <Option>Take photo</Option>
               <Option>Choose existing</Option
               <Option>Cancel</Option>
           </Options>
        </OptionDialog> -->
	</Window>
</Alloy>