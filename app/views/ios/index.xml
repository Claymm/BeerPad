<Alloy>
    <Collection src="beers"/>
    <NavigationWindow id="navGroupWin">
        <Window id="beerListWin" class="container" title="BeerDiary">
           
            <TableView id="beersTable" dataCollection="beers" dataTransform="transformFunction" editable="true" allowsSelectionDuringEditing="true">
                <TableViewRow 
                    hasChild="true" 
                    alloy_id="{alloy_id}"  
                    name="{name}" 
                    brewery="{brewery}" 
                    rating="{rating}" 
                    percent="{percent}"
                    establishment="{establishment}" 
                    location="{location}" 
                    notes="{notes}"
                    date="{date}"
                    beer_image="{beer_image}">
                    
                    <View class="tableRow">
                        <!--ImageView id="listImage" image="{list_image}"></ImageView-->
                        <Label id="tableRowName" text="{name}"></Label>
                        <View id="secondaryInfo">
                            <Label id="secondaryLabel" text="{secondaryInfo}" defaultText="No brewery"></Label>
                        </View>
                    </View>
                    
                </TableViewRow>
            </TableView>
            
            <OptionDialog id="filterDialog">
                <Options>
                    <Option>Newest</Option>
                    <Option>Oldest</Option>
                    <Option>Rated High</Option>
                    <Option>Rated Low</Option>
                    <Option>Strongest</Option>
                    <Option>Weakest</Option>
                    <Option>Name Asc.</Option>
                    <Option>Name Desc.</Option>
                    <Option>Cancel</Option>
                </Options>  
            </OptionDialog>   
                     
        </Window>
    </NavigationWindow>
</Alloy> 