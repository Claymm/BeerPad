<Alloy> 
   <Window class="container">
      <ScrollView showHorizontalScrollIndicator="false" showVerticalScrollIndicator="true" layout="vertical">
          <ImageView id="image" image="dafaultBeerImage.png"></ImageView>
          
          <Label id="name"></Label>
          <Label id="brewery"></Label>
          
          <View class="ratingButtons">
            <ImageView id="star1" image="ratingStar.png" class="starImage"></ImageView>
            <ImageView id="star2" image="ratingStar.png" class="starImage"></ImageView>
            <ImageView id="star3" image="ratingStar.png" class="starImage"></ImageView>
            <ImageView id="star4" image="ratingStar.png" class="starImage"></ImageView>
            <ImageView id="star5" image="ratingStar.png" class="starImage"></ImageView>
         </View>
              
          <View class="iconItem">
            <ImageView class="icon" id="locationIcon" image="building.png" />
            <Label class="iconTitle" id="pub" />
          </View>
          
          <View class="iconItem">
            <ImageView class="icon" id="buildingIcon" image="location.png" />
            <Label class="iconTitle" id="location" />
          </View>
          
          <Label id="notes"></Label>

      </ScrollView>
   </Window> 
</Alloy>