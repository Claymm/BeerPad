<Alloy> 
   <Window class="container">
      <ScrollView showHorizontalScrollIndicator="false" showVerticalScrollIndicator="true" layout="vertical">
          
          <ImageView id="image" onClick="viewImage" image="dafaultBeerImage.png"></ImageView>
          
          <Label id="name"></Label>
          <Label id="brewery"></Label>
          
          <!--View class="ratingButtons">
            <ImageView id="star1" image="ratingStar.png" class="starImage"></ImageView>
            <ImageView id="star2" image="ratingStar.png" class="starImage"></ImageView>
            <ImageView id="star3" image="ratingStar.png" class="starImage"></ImageView>
            <ImageView id="star4" image="ratingStar.png" class="starImage"></ImageView>
            <ImageView id="star5" image="ratingStar.png" class="starImage"></ImageView>
         </View-->
         
         <View id="ratingView" height="30dp"></View>
              
          <View class="iconItem">
            <ImageView class="icon" id="locationIcon" image="building.png" />
            <Label class="iconTitle" id="pub" />
          </View>
          
          <View class="iconItem">
            <ImageView class="icon" id="buildingIcon" image="location.png" />
            <Label class="iconTitle" id="location" />
          </View>
          
          <Label id="notes"></Label>

          <View id="spacer"></View>
      </ScrollView>
      
      <Toolbar id="toolbar" platform="ios" bottom="0" borderTop="true" borderBottom="false">
          <Items>
            <Button id="shareBtn" onClick="share" title="Share" systemButton="Ti.UI.iPhone.SystemButton.ACTION" />
            <FlexSpace/>
            <FlexSpace/>
            <Button id="deleteBtn" onClick="deleteBeer" title="Delete" systemButton="Ti.UI.iPhone.SystemButton.TRASH" />
          </Items>
      </Toolbar>
      
      <AlertDialog id="deleteDialog" onClick="confirmDeleteBeer" title="Delete"
            message="Ready to say good bye to this beer?" cancel="0">

            <!-- The ButtonNames tag sets the buttonNames property. -->
            <ButtonNames>
                <ButtonName>Cancel</ButtonName>
                <ButtonName id="confirm">Do it!</ButtonName>
            </ButtonNames>
        </AlertDialog>
        
   </Window> 
</Alloy>